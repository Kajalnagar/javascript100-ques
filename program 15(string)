/* Strings are for storing text , strings are written with quotes*/
<!DOCTYPE html>
<html>
<body>
<h1>Hello everyone</h1>
<p id ="demo"></p>
<script>let text="kajal";
document.getElementById("demo").innerHTML=text;
</script>
</body>
</html>

// 2 string together
<!DOCTYPE html>
<html>
<body>
<h1>Hello everyone</h1>
<p id ="demo"></p>
<script>
let name="kajal";
let lastname="Nagar";
document.getElementById("demo").innerHTML = name + " " + lastname;
</script>
</body>
</html>

// string length

<!DOCTYPE html>
<html>
<body>
<h1>Hello everyone</h1>
<p id ="demo"></p>
<script>let text="qwertyhhggfyhhjjmkkkkllmhh";
document.getElementById("demo").innerHTML=text.length;
</script>
</body>
</html>

/ The backslash escape character (\) turns special characters into string characters:
Code	Result	    Description
\' 	   '	         Single quote
\"	   "         	Double quote
\\    	\         	Backslash 
*/

// single quote

<!DOCTYPE html>
<html>
<body>
<h1>JavaScript Strings</h1>
<p>The escape sequence \' inserts a single quote in a string.</p>
<p id="demo"></p>
<script>
let text = 'It\'s alright.';
document.getElementById("demo").innerHTML = text; 
</script>
</body>
</html>

//Interpolation  Template strings allow variables in strings. Template strings provide an easy way to interpolate variables in strings.


<!DOCTYPE html>
<html>
<body>
<h1>JavaScript Strings</h1>
<p>The escape sequence \' inserts a single quote in a string.</p>
<p id="demo"></p>
<script>
let firstname = "kajal";
let lastname = "nagar";
let text = 'welcome ${firstname},${lastname};
document.getElementById("demo").innerHTML = text; 
</script>
</body>
</html>


// Basic String Methods
Javascript strings are primitive and immutable: All string methods produce a new string without altering the original string.

String length
String charAt()
String charCodeAt()
String codePointAt()
String concat()
String at()
String [ ]
String slice()
String substring()
String substr()
String toUpperCase()
String toLowerCase()
String isWellFormed()
String toWellFormed()
String trim()
String trimStart()
String trimEnd()
String padStart()
String padEnd()
String repeat()
String replace()
String replaceAll()
String split()


<!DOCTYPE html>
<html>
<body>

<h1>JavaScript String Methods</h1>
<p>Replace "Microsoft" with "W3Schools" in the paragraph below:</p>

<button onclick="myFunction()">Try it</button>

<p id="demo">Please visit Microsoft!</p>

<script>
function myFunction() {
  let text = document.getElementById("demo").innerHTML; 
  document.getElementById("demo").innerHTML =
  text.replace(/MICROSOFT/i,"W3Schools");
}
</script>

</body>
</html>

















